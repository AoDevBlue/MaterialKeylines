        <SwitchPreference
            android:defaultValue="false"
            android:title="@string/enabled"
            android:key="@string/pref_key_content_keylines_enabled" />
        <ListPreference
            android:defaultValue="@string/pref_values_opacity_default"
            android:title="@string/pref_name_opacity"
            android:summary="%s"
            android:entries="@array/pref_name_opacity_entries"
            android:entryValues="@array/pref_values_opacity"
            android:key="@string/pref_key_content_keylines_opacity" />
        <blue.aodev.materialgrids.ColorListPreference
            android:defaultValue="@color/pref_content_keylines_default_color"
            android:title="@string/pref_name_color"
            custom:entries="@array/pref_name_color_entries"
